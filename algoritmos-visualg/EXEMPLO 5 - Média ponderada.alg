algoritmo "média ponderada"
// Função :
// Autor :
// Data : 16/08/2023
// Seção de Declarações 
var
     nota1, nota2, nota3, media  : real
inicio
// Seção de Comandos 
   escreval ("Digite a 1ª nota: ")
   leia (nota1)
   escreval ("Digite a 2ª nota: ")
   leia (nota2)
   escreval ("Digite a 3ª nota: ")
   leia (nota3)
   
   media <- (nota1 + nota2 * 2 + nota3 * 3) / 6

fimalgoritmo
